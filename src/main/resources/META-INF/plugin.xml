<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
<!--    <id>com.fappslab.DiffLinesCounter</id>-->
   <id>github.adjustamat.gitreminder</id>
    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Git Reminder</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="adjustamat@github" url="https://github.com/adjustamat">adjustamat</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>A plugin for JetBrains IDEs which provides friendly reminders when there are
       unstaged, uncommitted or unpushed changes.</description>
    <version>Will be automatically populated by the build process.</version>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>


    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <statusBarWidgetFactory
                id="com.fappslab.difflinescounter.presentation.StatusBarFactory"
                implementation="com.fappslab.difflinescounter.presentation.StatusBarFactory"/>
       <projectCloseHandler
        implementation="com.chriscarini.jetbrains.gitpushreminder.GitPushReminder" />
       <applicationService
        serviceImplementation="com.chriscarini.jetbrains.gitpushreminder.settings.SettingsManager" />
       <applicationConfigurable
        instance="com.chriscarini.jetbrains.gitpushreminder.settings.SettingsConfigurable"
        displayName="git-reminder Settings" />
    </extensions>

    <actions>
        <action id="com.fappslab.difflinescounter.presentation.action.RefreshAction"
                class="com.fappslab.difflinescounter.presentation.action.RefreshAction"
                text="DiffLinesCounter Refresh"
                description="Refresh git repository status"
                icon="AllIcons.Actions.Refresh">
            <keyboard-shortcut
                    first-keystroke="alt shift D"
                    keymap="$default"/>
            <add-to-group
                    group-id="VcsGroups"
                    anchor="last"/>
        </action>
    </actions>

</idea-plugin>
